{
  "expo": {
    "name": "Art Connect",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "$(mobile) needs access to your Camera.",
        "NSMicrophoneUsageDescription": "$(mobile) needs access to your Microphone.",
        "NSSpeechRecognitionUsageDescription": "$(mobile) needs access to speech recognition for voice features and accessibility.",
        "NSPhotoLibraryUsageDescription": "$(mobile) needs access to your photo library to select and upload images."
      },
      "bundleIdentifier": "com.thenischal.mobile"
    },
    "android": {
      "softwareKeyboardLayoutMode": "resize",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.thenischal.mobile"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(mobile) to access your camera",
          "microphonePermission": "Allow $(mobile) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(mobile) to access your microphone."
        }
      ],
      "expo-av",
      "expo-secure-store",
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "94524b0f-a3c9-44a5-8a19-3bc0b4773fab"
      }
    },
    "owner": "ourchidlab"
  }
}
