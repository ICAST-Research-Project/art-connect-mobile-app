<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Provide the missing Theme.EdgeToEdge style -->
  <style name="Theme.EdgeToEdge" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Make system bars transparent for true edge-to-edge -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <!-- Optional icon contrast choices depending on your design:
         <item name="android:windowLightStatusBar">true</item>
         <item name="android:windowLightNavigationBar">true</item>
    -->
  </style>

  <!-- Your app theme extends the new Theme.EdgeToEdge -->
  <style name="AppTheme" parent="Theme.EdgeToEdge">
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:statusBarColor">#ffffff</item>
  </style>

  <!-- Expo splash theme that hands off to AppTheme -->
  <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/splashscreen_background</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>
    <item name="postSplashScreenTheme">@style/AppTheme</item>
  </style>

</resources>
